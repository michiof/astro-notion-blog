---
import { Icon } from 'astro-icon'
---

<button class="search-button open-search-modal" type="button"><Icon name="octicon:search-24" /></button> <!-- removed <span>Search</span> -->

<style>
  .search-button {
    display: flex;
    width: 100%;
    background-color: transparent;
    /* margin-bottom: 0.5rem; removed */
    border: none;
    border-radius: 50%; /*changed from var(--radius)*/
    padding: 0.5rem 0.5rem; /*changed from 0.4rem 0.4rem*/
    color: #777;
    font-size: 0.95rem;
    font-weight: bold;
  }
  .search-button:hover {
    cursor: pointer;
    background-color: #ddd;
    transition: all 0.3s ease; /* added */
  }
  .search-button svg {
    width: 20px;
    height: 20px;
    /* removed margin-right: 0.2rem; */
  }
  [astro-icon="octicon:search-24"] {
    color: var(--fg);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    function handleKeydown(event) {
      if (event.keyCode === 75 && event.metaKey) {
        // Ctrl+K or Cmd+K
        document.querySelector('.open-search-modal').click()
      }
    }

    document.addEventListener('keydown', handleKeydown)
  })
</script>
